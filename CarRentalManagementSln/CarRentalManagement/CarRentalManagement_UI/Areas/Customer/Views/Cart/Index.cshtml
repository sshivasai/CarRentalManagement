@using CarRentalManagement_DAL.ViewModels
@model ShoppingCartVM
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class="row">
					<div class="col-6  pt-2">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						<b><h4>Booking Summary</h4></b>
					</div>
					<div class="col-6 text-end">
						<a  asp-controller="Home" asp-action="Index" class="btn btn-outline-dark btn-sm">Back to Home</a>
					</div>
				</div>
			</div>

			<div class="card-body">
				@foreach(var item in Model.ListItem){
				<div class="row">
					<div class="d-none d-lg-block col-lg-1 text-center py-2">
						<img src="@item.Car.ImageUrl" class="rounded" width="100%" />
					</div>
					<div class="col-12 col-lg-6 pt-md-3">
						<h5><strong>@item.Car.Name</strong></h5>
						<p><small>Price per Day : @item.Car.PricePerDay</small></p>
						<p><small>Pickup Date : @item.PickupDate.ToShortDateString()</small></p>
						<p><small>Return Date : @item.ReturnDate.ToShortDateString()</small></p>
					</div>
					<div class="col-12  col-lg-5 text-center row">
						<div class="col-4 text-md-right pt-4">
							<h6><strong>@item.Price.ToString("c")<span class="text-muted">x</span> @(item.ReturnDate.Subtract(@item.PickupDate).TotalDays +1) </strong></h6>
						</div>
						@*<div class="col-6 col-sm-4 col-lg-6 pt-2">
							<div class="w-75 btn-group" role="group">
								<a class="btn btn-primary">
									<i class="bi bi-plus-square"></i>
								</a> &nbsp;
								<a class="btn btn-warning">
									<i class="bi bi-dash-square"></i>
								</a>
							</div>

						</div>*@
						<div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
							<a asp-action="remove" asp-route-cartId="@item.Id" class="btn btn-danger">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</div>
				</div>
				<hr />
				}
				<div class="row">
					<div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
						<ul class="list-group">
							<li class="list-group-item d-flex justify-content-between bg-light">
								<span class="text-info"> Total (USD)</span>
								<strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
							</li>
						</ul>
					</div>
				</div>

			</div>

			<div class="card-footer">
				<div class="card-footer row">
					<div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
						<a asp-action="Summary" class="btn btn-success form-control">Summary</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
