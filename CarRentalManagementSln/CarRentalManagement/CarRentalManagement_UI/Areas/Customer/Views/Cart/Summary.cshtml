@using CarRentalManagement_DAL.ViewModels
@model ShoppingCartVM
@using CarRentalManagement_UI.Utility
@using Microsoft.Extensions.Options

@inject IOptions<StripeSettings> Stripe
<form method="post">
	<br />
	<div class="container">
		<div class="card">
			<div class="card-header bg-dark text-light ml-0">
				<div class=" row container">
					<div class="col-6">
						<i class="fa fa-shopping-cart"></i> &nbsp;
						Order Summary
					</div>
					<div class="col-6 text-end">
						<a asp-action="Index" class="btn btn-outline-info btn-sm">Back to Cart</a>
					</div>
				</div>
			</div>
			<div class="card-body">
				<div class="container rounded p-2">
					<div class="row">
						<div class="col-12 col-lg-6 pb-4">
							<div class="row">
								<h4 class="d-flex justify-content-between align-items-center mb-3">
									<span class="text-info">Customer Details:</span>
								</h4>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Name</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.Name" class="form-control" />
									<span asp-validation-for="OrderHeader.Name" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Phone Number</label>
								</div>
								<div class="col-9">
									<input asp-for="OrderHeader.PhoneNumber" class="form-control" />
									<span asp-validation-for="OrderHeader.PhoneNumber" class="text-danger"></span>
								</div>
							</div>
							<div class="row my-1">
								<div class="col-3">
									<label>Pickup Location</label>
								</div>
								<div class="col-9">
									
									<select asp-for="OrderHeader.PickupCity" class="form-control">
										<option selected disabled>--Select Pickup City--</option>
										<option value="Hyderabad">Hyderabad</option>
        <option value="Mumbai">Mumbai</option>
        <option value="Pune">Pune</option>
        <option value="Delhi">Delhi</option>
									</select>

									<span asp-validation-for="OrderHeader.PickupCity" class="text-danger"></span>
								</div>
							</div>
							
							</div>
						</div>
						<div class="col-12 col-lg-5 offset-lg-1">
							<h4 class="d-flex justify-content-between align-items-center mb-3">
								<span class="text-info">Order Summary:</span>
							</h4>
							<ul class="list-group mb-3">
								@foreach(var details in Model.ListItem ){
								<li class="list-group-item d-flex justify-content-between ">
									<div>
										<h6 class="my-0">@details.Car.Name</h6>
										<small class="text-muted">Pickup: @details.PickupDate.ToShortDateString()</small>
										<br>
										<small class="text-muted">Return: @details.ReturnDate.ToShortDateString()</small>
										<br>
										
									</div>
									<small class="text-muted">Price/Day: @(details.Price) $$</small>
									
										<small class="text-muted">Total Price: $$ @((details.Price*details.Days))  </small>
									
								</li>
								}
								<li class="list-group-item d-flex justify-content-between bg-light">
									<small class="text-info">Total (USD)</small>
									<strong class="text-info">@Model.OrderHeader.OrderTotal</strong>
								</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
			<div class="card-footer">
				<div class="row">
					@*<div class="col-12 col-md-8 pt-2">
						<p style="color:maroon; font-size:14px;">Estimate Arrival Date: </p>
					</div>*@
					<div class="col-12 col-md-4">
						<button type="submit" value="Place Order" class="btn btn-primary form-control">Place Order</button>
					</div>
				</div>
			</div>
		</div>
	</div>
</form>
