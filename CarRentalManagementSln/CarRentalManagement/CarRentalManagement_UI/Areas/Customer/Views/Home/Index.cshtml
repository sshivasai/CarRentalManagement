@model IEnumerable<Car>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row pb-3 ">
	@foreach(var car in Model)
	{
		<div class="col-lg-3 col-md-6 pt-5">
			<div class="row p-2">
				<div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
					<div class="card">
						<img src="@car.ImageUrl" class="card-img-top rounded"/>

						<div class="card-body">
						<div class="pl-1">
							<p class="card-title h5 text-primary" style = "text-align:center ;font-weight:bold">@car.Name</p>
							<p class="card-title text-info">Brand :  <b>@car.Manufacturer.Name</b></p>

							<p class="card-title text-info">Category : <b>@car.CarCategory.CategoryName</b></p>
						</div>
						
						<div class="pl-1">
							<p> Price Per Day :  <b>$@car.PricePerDay.ToString()</b></p>
						</div>
						<div class="pl-1" style="color:green">
							<p>Get is as low as  : <b>$@car.PricePerMonth.ToString()</b></p>
						</div>
						
						</div>
					</div>
					<div>
						<a asp-action="Details" class="btn btn-primary form-control" asp-route-carId="@car.Id">
							Details
						</a>
					</div>
				</div> 
			</div>
		</div>
	}
</div>